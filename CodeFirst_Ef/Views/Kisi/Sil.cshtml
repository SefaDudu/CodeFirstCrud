@model CodeFirst_Ef.Models.Kisiler
@{
    ViewBag.Title = "Sil";
}

<h2>Yeni Kişi</h2>
<p>
    Silmek istediğinizden emin misiniz?
</p>
<hr />
@using (Html.BeginForm())
{
    @*@Html.HiddenFor(x=>x.Id)*@
    <div class="input-group mb-3">
        <span class="input-group-text" id="txtad">Ad</span>
        @Html.DisplayFor(x => x.Ad, new { @class = "form-control", aria_describedby = "txtad" })
        <br />
        <br />
        <span class="input-group-text" id="txtsoyad">Soyad</span>
        @Html.DisplayFor(x => x.Soyad, new { @class = "form-control", aria_describedby = "txtsoyad" })
        <br />
        <br />
        <span class="input-group-text" id="txtyas">Yaş</span>
        @Html.DisplayFor(x => x.Yas, new { @class = "form-control", aria_describedby = "txtyas" })
        <br />
        <br />
    </div>
    <div class="input-group mb-3">
        <input type="submit" value="Sil" class="btn btn-success" />
    </div>
    <div class="input-group">

        @if (ViewBag.Result != null)
        {

            <div class="alert alert-@ViewBag.Status" role="alert">
                @ViewBag.Result
            </div>
        }

    </div>
}