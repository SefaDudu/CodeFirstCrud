@using CodeFirst_Ef.ViewModels.Home
@model  HomePageVM
@{
    ViewBag.Title = "homepage";
}
<div class="container-fluid">
    <div class="row">

        <h2>homepage</h2>

        <hr />
    </div>
    <div class="row">
        <div class="col-md-6">
            
            <div>
                @Html.ActionLink("Yeni Kisi", "Yeni" , "Kisi",null,new { @class="btn btn-primary"})
                <br />
                <br />
            </div>

            <ul class="list-group">
                <li class="list-group-item active" > KİŞİLER</li>

                @foreach (var kisi in Model.Kisiler)
                {
            <li class="list-group-item">
                @Html.ActionLink("Düzenle", "Duzenle", "Kisi", new { kisiId = kisi.Id }, new { @class = "btn btn-warning btn-xs" })
                <a href="/Kisi/Sil/@kisi.Id" class="btn btn-danger btn-xs">Sil</a>
              
                <span class="glyphicon glyphicon-user"> </span>  @(kisi.Ad+ " " + kisi.Soyad)  (<i> @(kisi.Yas)</i>)
            </li>

                }

            </ul>
        </div>
        <div class="col-md-6">

            <div>
                @Html.ActionLink("Yeni Adres", "Yeni", "Adres", null, new { @class = "btn btn-primary" })
                <br />
                <br />
            </div>
            <ul class="list-group">
                <li class="list-group-item active"> ADRESLER</li>
                @foreach (var adres in Model.Adresler)
                {
            <li class="list-group-item ">
                @Html.ActionLink("Düzenle", "Duzenle", "Adres", new { adresId = adres.ID }, new { @class = "btn btn-warning btn-xs" })
                <a href="/Adres/Sil/@adres.ID" class="btn btn-danger btn-xs">Sil</a>
                <span class="glyphicon glyphicon-home ">
                    @adres.AdresTanım 
</li>

                }

            </ul>
        </div>
    </div>
</div>
